{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "src",
    "paths": {
      "@/*": ["./src/*"],
      "@repo/*": ["./lib/*"],
      "@r2r/*": ["./lib/*"]
    }
  },
  "include": ["src/**/*.ts", "lib/**/*.js"],
  "exclude": ["node_modules"]
}
